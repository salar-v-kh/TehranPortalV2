@model ResponseViewModel
@{
    ViewBag.Title = "خطا !!!";
    ViewBag.TitlePage = "خطایی پیش آمده !!!";
}

<div class="row tehranit-box ErrorPage">
    @if (Model.IsSuccess == false)
    {
        <div class="col-12 page_404 px-xxl-5">
            <div class="row">
                <div class="col-3"></div>
                <div class="col-12 col-xl-6">
                    <div class="text-center">
                        <div class="four_zero_four_bg">
                            <h1 class="text-center ">@Model.StatusCode</h1>
                        </div>

                        <div class="contant_box_404">
                            <h3 class="h3">
                                خطایی پیش آمده !!!
                            </h3>
                            <p> @Model.Message</p>
                            <a asp-controller="Home" asp-action="Index" class="link_404">بازگشت به خانه</a>
                        </div>
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
        </div>
    }
</div>

@section Styles {
}
@section Scripts {
}
